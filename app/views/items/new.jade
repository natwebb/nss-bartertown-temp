extends ../shared/template

block content
  .row
    .small-12.columns
      h1 Enter a New Item to Barter!
  .row
    .small-12.columns
      form(action='/items', method='post', enctype='multipart/form-data')
        .row
          .small-4.columns
            label(for='name') Name
              input(type='text', name='name', placeholder='What\'s your item called?')
          .small-4.columns
            label(for='year') Year
              input(type='text', name='year', placeholder='What year was your item made?')
          .small-4.columns
            label(for='cost') Cost
              input(type='text', name='cost', placeholder='Roughly how much is your item worth now?')
        label(for='tags') Tags
          input(type='text', name='tags', placeholder='Give us some short tags, separated by commas, to help people find your item.')
        label(for='description') Description
          textarea(name='description', placeholder='Give us a nice, detailed description of your item. Make it sound awesome!')
        label(for='photo') Add a Picture!
          input(name='photo', type='file')
        button Add Item!
